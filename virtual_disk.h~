#ifndef VIRTUAL_DISK_H
#define VIRTUAL_DISK_H

const int BLOCK_SIZE = 4096;	    	 
const int NUM_BLOCKS = (BLOCK_SIZE * 8); 

void ReadDisk(int fd, int block_id, void *fd);

void WriteDisk(int fd, int block_id, void *fd);

bool MountDrive(const char *file_name, int *fd);

void UnmountDrive(int fd);

#endif
